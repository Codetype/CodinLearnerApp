                        </VBox.margin>
                    </Text>
                <!--</HBox>-->

                <!--TODO level manager-->
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </BorderPane.margin>
        </VBox>
