    </right>
    <bottom>
        <VBox prefHeight="300.0" prefWidth="800.0" style=" -fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;" BorderPane.alignment="CENTER">
            <children>
                <ScrollPane fx:id="scrollPane" fitToWidth="true" prefHeight="130">
                    <content>
                        <Label id="PrevCommands" fx:id="prevCommands" alignment="BOTTOM_LEFT" prefWidth="800.0" style="-fx-background-color: grey;" />
                    </content>
                </ScrollPane>
                <TextArea id="CommandLine" fx:id="commandLine" prefHeight="130" />
                <HBox fx:id="infoBox" alignment="CENTER_LEFT" maxHeight="-Infinity" prefHeight="12" prefWidth="800.0">
                    <Text fx:id="infoText" style="-fx-fill: #c00000;">
                        <HBox.margin>
                            <Insets left="5.0" right="5.0" />
                        </HBox.margin>
                    </Text>
                </HBox>
                <HBox fx:id="hbox" maxHeight="-Infinity" prefHeight="39.0" prefWidth="800.0" BorderPane.alignment="TOP_LEFT">
                    <Button fx:id="undoButton" mnemonicParsing="false" onAction="#handleUndoAction" text="Undo">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </HBox.margin>
                    </Button>
                    <Button fx:id="redoButton" mnemonicParsing="false" onAction="#handleRedoAction" text="Redo">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </HBox.margin>
                    </Button>
                    <Pane HBox.hgrow="ALWAYS" />
                    <Button fx:id="prevLevelButton" mnemonicParsing="false" onAction="#handlePrevLevelAction" text="Previous level">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </HBox.margin>
                    </Button>
                    <Button fx:id="nextLevelButton" mnemonicParsing="false" onAction="#handleNextLevelAction" text="Next Level">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </HBox.margin>
                    </Button>
                    <Button fx:id="addLevelsButton" mnemonicParsing="false" onAction="#handleAddLevelsAction" text="Add Levels">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                        </HBox.margin>
                    </Button>
                </HBox>
            </children>
        </VBox>
    </bottom>
