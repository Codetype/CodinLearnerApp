    <center>
        <Pane prefHeight="400.0" prefWidth="600.0" style="-fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;">
            <Canvas fx:id="cursorCanvas" height="400.0" style="-fx-border-color:white" width="600.0" />
            <Canvas fx:id="lineCanvas" height="400.0" width="600.0" />
            <Canvas fx:id="shadowCanvas" height="400.0" width="600.0" />
        </Pane>
    </center>
    <right>
        <VBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" style=" -fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;" BorderPane.alignment="CENTER">
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </opaqueInsets>
            <children>
                <TextArea fx:id="levelInfo" editable="false" wrapText="true" />
                <Button fx:id="execButton" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleExecuteAction" text="Execute">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="checkButton" alignment="TOP_CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleCheckAction" text="Check">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </VBox.margin>
                </Button>
                <Region VBox.vgrow="ALWAYS"/>
                <!--<HBox alignment="BOTTOM_CENTER">-->
                    <!--<HBox.margin>-->
                        <!--<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />-->
